<%- include('../partials/diagnosa/header') %>
  <div id="content" class="container my-5 rounded-2 py-3">

    <table class="table p-5">
      <h4 class="fw-bold">Hasil Diagnosa</h4>

      <% if (results[0].point.length !==0) { %>
        <h5 class="text-danger fw-bold">Positif</span>
          <%= results.length %> Penyakit/Hama</h4>
            <% } %>

              <% if (results[0].point.length===0) { %>
                <h5 class="text-success fw-bold">Negative Penyakit/Hama</h5>
                <% } %>

                  <h6>
                    <%= new Date().toLocaleString('id-ID') %>
                  </h6>
                  
                  <button class="btn btn-primary btn-sm rounded-1" id="printOut"
                    onclick="cetak('printOut')"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-printer" viewBox="0 0 16 16">
                      <path d="M2.5 8a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1"/>
                      <path d="M5 1a2 2 0 0 0-2 2v2H2a2 2 0 0 0-2 2v3a2 2 0 0 0 2 2h1v1a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2v-1h1a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2h-1V3a2 2 0 0 0-2-2zM4 3a1 1 0 0 1 1-1h6a1 1 0 0 1 1 1v2H4zm1 5a2 2 0 0 0-2 2v1H2a1 1 0 0 1-1-1V7a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1h-1v-1a2 2 0 0 0-2-2zm7 2v3a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1v-3a1 1 0 0 1 1-1h6a1 1 0 0 1 1 1"/>
                    </svg> Cetak</button>

                  <% for( const result of results ) { %>
                    <table class="table table-bordered table-striped border-dark">
                      <tr>
                        <th>Penyakit/Hama</th>
                        <td>
                          <%= result.name %>
                        </td>
                      </tr>
                      <tr>
                        <th>Gejala</th>
                        <td>
                          <%= result.gejala %>
                        </td>
                      </tr>
                      <tr>
                        <th>Solusi</th>
                        <td>
                          <%= result.solusi %>
                        </td>
                      </tr>
                    </table>
                    <% } %>
    </table>
  </div>
  <%- include('../partials/footer') %>